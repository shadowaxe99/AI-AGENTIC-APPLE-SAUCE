{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*Controller.ts"
  ],
  "ignore": [
    "src/generated"
  ],
  "spec": {
    "outputDirectory": "./",
    "specVersion": 3,
    "spec": {
    "servers": [
        {
          "url": "http://localhost:3000",
          "description": "Local development"
        }
      ]
    },
    "yaml": true,
    "specFileBaseName": "openapi"
  },
  "routes": {
    "routesDir": "src/generated"
  }
}